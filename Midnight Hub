local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Check if game is loaded
if not game:IsLoaded() then
    game.Loaded:Wait()
end

-- Variables
local Player = game:GetService("Players").LocalPlayer
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Anti AFK
local GC = getconnections or get_signal_cons
if GC then
    for i,v in pairs(GC(Player.Idled)) do
        if v["Disable"] then
            v["Disable"](v)
        elseif v["Disconnect"] then
            v["Disconnect"](v)
        end
    end
end

local Window = OrionLib:MakeWindow({
    Name = "Midnight Hub Premium", 
    HidePremium = true,
    SaveConfig = true,
    IntroEnabled = true,
    IntroText = "Midnight Hub",
    ConfigFolder = "MidnightHubSettings"
})

-- Main Tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Main Section
local MainSection = MainTab:AddSection({
    Name = "üí™ Auto Farm"
})

-- Auto Farm Toggle
MainSection:AddToggle({
    Name = "Auto Farm",
    Default = false,
    Flag = "autoFarm",
    Save = true,
    Callback = function(Value)
        _G.AutoFarm = Value
        if Value then
            local Thread1 = coroutine.create(function()
                loadstring(game:HttpGet(('https://pastebin.com/raw/CAyTaeX5'),true))()
            end)
            coroutine.resume(Thread1)
            wait(2)
            loadstring(game:HttpGet(('https://pastebin.com/raw/kyEAUzvH'),true))()
        end
    end
})

-- Auto Farm Speed Slider
MainSection:AddSlider({
    Name = "Farm Speed",
    Min = 1,
    Max = 10,
    Default = 5,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    Flag = "farmSpeed",
    Save = true,
    ValueName = "Speed",
    Callback = function(Value)
        _G.FarmSpeed = Value
    end    
})

-- Autobuy Section
local AutobuySection = MainTab:AddSection({
    Name = "üõçÔ∏è Auto Buy"
})

-- Autobuy Weights Toggle
AutobuySection:AddToggle({
    Name = "Auto Buy Weights",
    Default = false,
    Flag = "autoWeights",
    Save = true,
    Callback = function(Value)
        _G.AutoBuyWeights = Value
        if Value then
            loadstring(game:HttpGet(('https://pastebin.com/raw/7cu6vrRH'),true))()
        end
    end
})

-- Autobuy Genetics Toggle
AutobuySection:AddToggle({
    Name = "Auto Buy Genetics",
    Default = false,
    Flag = "autoGenetics",
    Save = true,
    Callback = function(Value)
        _G.AutoBuyGenetics = Value
        if Value then
            loadstring(game:HttpGet(('https://pastebin.com/raw/EeMP9zjC'),true))()
        end
    end
})

-- Autobuy Body Alters Toggle
AutobuySection:AddToggle({
    Name = "Auto Buy Body Alters",
    Default = false,
    Flag = "autoBodyAlters",
    Save = true,
    Callback = function(Value)
        _G.AutoBuyBodyAlters = Value
        if Value then
            loadstring(game:HttpGet(('https://pastebin.com/raw/yjH02jbS'),true))()
        end
    end
})

-- Player Tab
local PlayerTab = Window:MakeTab({
    Name = "Player",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Movement Section
local MovementSection = PlayerTab:AddSection({
    Name = "üèÉ Movement"
})

-- WalkSpeed Slider
MovementSection:AddSlider({
    Name = "Walk Speed",
    Min = 16,
    Max = 500,
    Default = 16,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    Flag = "walkSpeed",
    Save = true,
    ValueName = "Speed",
    Callback = function(Value)
        Player.Character.Humanoid.WalkSpeed = Value
    end    
})

-- JumpPower Slider
MovementSection:AddSlider({
    Name = "Jump Power",
    Min = 50,
    Max = 500,
    Default = 50,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    Flag = "jumpPower",
    Save = true,
    ValueName = "Power",
    Callback = function(Value)
        Player.Character.Humanoid.JumpPower = Value
    end    
})

-- Teleport Section
local TeleportSection = PlayerTab:AddSection({
    Name = "üèÉ Teleports"
})

-- Safe Place Teleport
TeleportSection:AddButton({
    Name = "Teleport To Safe Place",
    Callback = function()
        loadstring(game:HttpGet(('https://pastebin.com/raw/ngreFGds'),true))()
    end
})

-- Misc Tab
local MiscTab = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Server Section
local ServerSection = MiscTab:AddSection({
    Name = "üåê Server"
})

-- Rejoin Button
ServerSection:AddButton({
    Name = "Rejoin Server",
    Callback = function()
        game:GetService("TeleportService"):Teleport(game.PlaceId, Player)
    end
})

-- Server Hop Button
ServerSection:AddButton({
    Name = "Server Hop",
    Callback = function()
        local Servers = game.HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"))
        for i,v in pairs(Servers.data) do
            if v.playing ~= v.maxPlayers then
                game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, v.id, Player)
            end
        end
    end
})

-- Settings Tab
local SettingsTab = Window:MakeTab({
    Name = "Settings",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- UI Settings Section
local UISection = SettingsTab:AddSection({
    Name = "‚öôÔ∏è UI Settings"
})

-- UI Toggle Keybind
UISection:AddBind({
    Name = "Toggle UI",
    Default = Enum.KeyCode.RightControl,
    Hold = false,
    Flag = "toggleUI",
    Save = true,
    Callback = function()
        OrionLib:Toggle()
    end    
})

-- Credits Section
local CreditsSection = SettingsTab:AddSection({
    Name = "üìù Credits"
})

CreditsSection:AddParagraph("Credits", "Made by Michael979#9941\nEnhanced by Midnight Team\nUI Library by shlex")

-- Initialize
OrionLib:Init()

-- Welcome Notification
OrionLib:MakeNotification({
    Name = "Midnight Hub Premium",
    Content = "Successfully loaded! Press Right-Control to toggle UI",
    Image = "rbxassetid://4483345998",
    Time = 5
})

-- Auto Save Settings
spawn(function()
    while true do
        wait(10)
        OrionLib:SaveConfiguration()
    end
end)
