local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({
    Name = "Midnight Hub", 
    HidePremium = true,
    SaveConfig = false,
    IntroEnabled = false,
    ConfigFolder = "MidnightHub"
})

-- Main Tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Main Section
local MainSection = MainTab:AddSection({
    Name = "Farming"
})

-- Autofarm Button
MainSection:AddButton({
    Name = "Autofarm",
    Callback = function()
        local Thread1 = coroutine.create(function()
            loadstring(game:HttpGet(('https://pastebin.com/raw/CAyTaeX5'),true))()
        end)
        coroutine.resume(Thread1)
        wait(2)
        loadstring(game:HttpGet(('https://pastebin.com/raw/kyEAUzvH'),true))()
    end
})

-- Autobuy Section
local AutobuySection = MainTab:AddSection({
    Name = "Auto Buy"
})

-- Autobuy Weights Button
AutobuySection:AddButton({
    Name = "Autobuy Weights",
    Callback = function()
        loadstring(game:HttpGet(('https://pastebin.com/raw/7cu6vrRH'),true))()
    end
})

-- Autobuy Genetics Button
AutobuySection:AddButton({
    Name = "Autobuy Genetics",
    Callback = function()
        loadstring(game:HttpGet(('https://pastebin.com/raw/EeMP9zjC'),true))()
    end
})

-- Autobuy Body Alters Button
AutobuySection:AddButton({
    Name = "Autobuy Body Alters",
    Callback = function()
        loadstring(game:HttpGet(('https://pastebin.com/raw/yjH02jbS'),true))()
    end
})

-- Teleport Section
local TeleportSection = MainTab:AddSection({
    Name = "Teleport"
})

-- Teleport Button
TeleportSection:AddButton({
    Name = "Teleport To Safe Place",
    Callback = function()
        loadstring(game:HttpGet(('https://pastebin.com/raw/ngreFGds'),true))()
    end
})

-- Settings Tab
local SettingsTab = Window:MakeTab({
    Name = "Settings",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Keybind Section
local KeybindSection = SettingsTab:AddSection({
    Name = "UI Toggle"
})

-- UI Toggle Keybind
KeybindSection:AddBind({
    Name = "Toggle UI",
    Default = Enum.KeyCode.Q,
    Hold = false,
    Callback = function()
        OrionLib:Toggle()
    end    
})

-- Credits Section
local CreditsSection = SettingsTab:AddSection({
    Name = "Credits"
})

CreditsSection:AddParagraph("Credits", "Made by Michael979#9941\nUI Library by shlex")

-- Initialize
OrionLib:Init()

-- Notify on Load
OrionLib:MakeNotification({
    Name = "Midnight Hub",
    Content = "Successfully loaded! Press Q to toggle the UI",
    Image = "rbxassetid://4483345998",
    Time = 5
})
